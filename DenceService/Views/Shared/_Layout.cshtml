<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #d7dad6;
            padding: 0;
        }
         * {
             padding: 0;
             margin: 0;

         }
        header {
            background-color: #645c9f;
            height: 60px;
        }
        footer {
            background-color: #563256;
            height: 30px;
        }
        .main {
            width: 920px;
            margin: 0 auto;
            color: #eed102;
        }
        nav ul li a{
            font-size: 20px;
        }
        .main span a{
            float: right;
            font-size: 30px;
            color: #bc90ba;
            font-weight: bold;
            margin: 10px;
        }
        .body-content {
            
            width: 920px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <header>
        <div class="main">
            <span><a href="/Home/Login">Вход</a></span>
            <span><a> Регистрация</a></span>
        </div>
    </header>
<div class="body-content">
    <nav float="left" style="width: 30%">
        <ul>
            <li><a>Домашняя</a></li>
            <li><a>Новости</a></li>
            <li><a>О нас</a></li>
        </ul>
    </nav>
    <div float="left" style="width: 60%; background-color: white" >
        <article>
            @RenderBody()
        </article>
    </div>
</div>
<footer>
    <div class="main">
    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
      </div>
</footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
